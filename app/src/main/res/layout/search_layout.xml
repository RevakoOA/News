<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false">

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_rounded_white"
        android:hint="@string/search"
        android:inputType="textFilter"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivClose" />

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_rounded_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <CheckedTextView
        android:id="@+id/tvcTopStories"
        style="@style/WhiteSearchCheckedTextView"
        android:text="Top Stories"
        app:layout_constraintEnd_toEndOf="@+id/etSearch"
        app:layout_constraintStart_toStartOf="@+id/etSearch"
        app:layout_constraintTop_toBottomOf="@+id/etSearch" />

    <View
        style="@style/ViewDivider"
        android:id="@+id/v1"
        app:layout_constraintTop_toBottomOf="@+id/tvcTopStories" />

    <CheckedTextView
        android:id="@+id/tvcMyNews"
        style="@style/WhiteSearchCheckedTextView"
        android:text="My News"
        app:layout_constraintEnd_toEndOf="@+id/etSearch"
        app:layout_constraintStart_toStartOf="@+id/etSearch"
        app:layout_constraintTop_toBottomOf="@+id/v1" />

    <View
        style="@style/ViewDivider"
        android:id="@+id/v2"
        app:layout_constraintTop_toBottomOf="@+id/tvcMyNews" />

    <CheckedTextView
        android:id="@+id/tvcPopular"
        style="@style/WhiteSearchCheckedTextView"
        android:text="Popular"
        app:layout_constraintEnd_toEndOf="@+id/etSearch"
        app:layout_constraintStart_toStartOf="@+id/etSearch"
        app:layout_constraintTop_toBottomOf="@+id/v2" />

    <View
        style="@style/ViewDivider"
        android:id="@+id/v3"
        app:layout_constraintTop_toBottomOf="@+id/tvcPopular" />

    <CheckedTextView
        android:id="@+id/tvcVideo"
        style="@style/WhiteSearchCheckedTextView"
        android:text="Video"
        app:layout_constraintEnd_toEndOf="@+id/etSearch"
        app:layout_constraintStart_toStartOf="@+id/etSearch"
        app:layout_constraintTop_toBottomOf="@+id/v3" />

    <View
        style="@style/ViewDivider"
        android:id="@+id/v4"
        app:layout_constraintTop_toBottomOf="@+id/tvcVideo" />


</android.support.constraint.ConstraintLayout>